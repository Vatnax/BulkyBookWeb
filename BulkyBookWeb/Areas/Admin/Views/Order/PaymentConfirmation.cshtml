@model int

<div class="container row">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment successful!</h1>
        Your Order Number is : @Model <br /><br />
    </div>
    <div class="col-12 text-center" style="color:maroon">
        <br />
        Your payment has been applied successfully! <br />
        <a asp-action="Details" asp-area="Admin" asp-controller="Order" asp-route-orderId="@Model" class="btn btn-primary">Back to Order Details</a>
    </div>
</div> 

